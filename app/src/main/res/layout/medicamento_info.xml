<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/default_dim"
    android:background="?attr/colorSurfaceVariant"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_medicamento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_pending_checked"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_medicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="@dimen/small_dim"
        android:text="Ibuprofeno"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/default_dim"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info1_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_dim"
        android:text="Concentración"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info2_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/info1_textView"
        app:layout_constraintEnd_toStartOf="@id/info3_textView"
        android:layout_marginTop="@dimen/default_dim"
        android:layout_marginStart="@dimen/default_dim"
        android:text="Tipo"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info3_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/default_dim"
        android:layout_marginStart="@dimen/default_dim"
        android:layout_gravity="end"
        android:text="Dosis"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dato1_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/info1_textView"
        app:layout_constraintStart_toStartOf="@id/info1_textView"
        app:layout_constraintEnd_toEndOf="@id/info1_textView"
        android:layout_marginTop="@dimen/small_dim"
        android:text="600 mg"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dato2_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/info2_textView"
        app:layout_constraintStart_toStartOf="@id/info2_textView"
        app:layout_constraintEnd_toEndOf="@id/info2_textView"
        android:layout_marginTop="@dimen/small_dim"
        android:gravity="center"
        android:text="Cápsula\nRojo"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dato3_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/info3_textView"
        app:layout_constraintStart_toStartOf="@id/info3_textView"
        app:layout_constraintEnd_toEndOf="@id/info3_textView"
        android:layout_marginTop="@dimen/small_dim"
        android:gravity="center"
        android:text="2"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descripcion_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toBottomOf="@id/dato1_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/long_dim"
        android:text="Descripción"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/descripcion_textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descripcion_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_dim"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
        android:text="Hola esto es una prueba" />



</androidx.constraintlayout.widget.ConstraintLayout>