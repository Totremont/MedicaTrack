<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:backgroundTint="?attr/colorTertiary"
    android:layout_margin="@dimen/default_dim"
    app:cardCornerRadius="@dimen/small_dim"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_medicamento"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorTertiaryContainer"
            android:src="@drawable/icon_date"
            />

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_medicamento"
            android:text="Ibuprofeno"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnTertiary"
            android:layout_marginStart="@dimen/small_dim"
            />

        <TextView
            android:id="@+id/tipo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_textView"
            android:text="Cápsula • 600 mg"
            android:textColor="?attr/colorOnTertiary"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginStart="@dimen/small_dim"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>